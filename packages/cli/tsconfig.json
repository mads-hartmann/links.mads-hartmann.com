{
    "compilerOptions": {
        "rootDir": "ts",
        "outDir": "dist",
        "target": "es5",
        "lib": [
            "es2021",
            "DOM"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "noImplicitOverride": true,
        // The following two options means I can use import path from 'path'
        // rather than import * as path from 'path'
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        //
        "sourceMap": true,
        "declaration": true,
        // enables importers to jump to source
        "declarationMap": true,
    }
}
