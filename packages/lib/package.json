    "@types/chai-as-promised": "^7.1.4",
    "@types/jsdom": "^16.2.13",
    "@types/mocha": "^9.0.0",
    "@types/node-fetch": "^2.5.12",
    "@types/sinon": "^10.0.2",
    "@types/sqlite3": "^3.1.7",
    "@types/xml2js": "^0.4.9",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "mocha": "^9.1.1",
    "nyc": "^15.1.0",
    "sinon": "^11.1.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
