{
  "name": "@links/lib",
  "version": "1.0.0",
  "description": "Shared library code",
  "main": "dist/index.js",
  "type": "commonjs",
  "exports": {
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "scripts": {
    "clean": "tsc --build --clean",
